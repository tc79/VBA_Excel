Sub FixReport()
  Dim r As Range
  Dim rngToChk As Range
  Dim c As Variant
  Dim colTotal(0 To 1) As Range 'Columns where the totals are (C and E)
  Dim colVals(0 To 1) As Range 'Columns where the values are (B and D)
    
  With Worksheets("Sheet1")
    Set colTotal(0) = Range("C5:C805")
    Set colTotal(1) = Range("E5:E805")
    
    Set colVals(0) = Range("B5:B805")
    Set colVals(1) = Range("D5:D805")
    
    For Each c In colTotal
      Set rngToChk = c
      'Debug.Print rngToChk.Address
      
      For Each r In rngToChk
        'If the cell is NOT empty, _
        copy value to the cell to the left
        'Debug.Print "r is:" & r.Address
        'Debug.Print "Is r empty?" & IsEmpty(r.Value)

        If IsEmpty(r.Value) = False Then
          'Copy the cell value to the cells to the left
          With r
            .Offset(, -1).Value = .Value
            .ClearFormats
            .ClearContents
          End With
        Else
          End If
      Next r
    
    Next c
    
    'Cell formatting options
    With Range("B5:D200")
      .NumberFormat = "_($* #,##0.00_);_($* (#,##0.00);_($* ""-""??_);_(@_)"
      .Font.Size = 11
      .HorizontalAlignment = xlLeft
    End With
            
    With Columns("A")
      .ColumnWidth = 38.71
      .Font.Size = 11
      .Range("A1:A2").Font.Size = 12
    End With
    
    Columns("B").ColumnWidth = 14.5
    
    Columns("C").ColumnWidth = 4
    
    Columns("D").ColumnWidth = 14.5
    
    Columns("E").ColumnWidth = 4
    
    With Columns("F")
      .ColumnWidth = 10
      .Font.Size = 11
      .HorizontalAlignment = xlCenter
      .NumberFormat = "0.00"
    End With
    
    With Rows(4)
      .HorizontalAlignment = xlCenter
      .Font.Size = 11
      .RowHeight = 33
      .WrapText = True
    End With
      
  End With

End Sub
